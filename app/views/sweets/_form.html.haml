= form_for([@article, @sweet]) do |f|
  - if @sweet.errors.any?
    #error_explanation
      %h2= "#{pluralize(@sweet.errors.count, "error")} prohibited this sweet from being saved:"
      %ul
        - @sweet.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :author
    = f.text_field :author
  .field
    = f.label :article_id
    = f.number_field :article_id
  .actions
    = f.submit 'Save'
