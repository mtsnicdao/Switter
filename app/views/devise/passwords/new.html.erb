<div id="header">
    <h3 id="title"> Switter </h3>
</div>

<div id="signdiv">
	<h2 id="signtitle"> Forgot Your Password? </h2> <hr/>

	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
	  <%= devise_error_messages! %>

	  <div id="sign"><%= f.label :username %><br />
	  <%= f.text_field :uname, autofocus: true %></div>

	  <div><%= f.submit "Send me reset password instructions", :class => "button expand", id:"signinbutton" %></div>
	<% end %>

	<%= render "devise/shared/links" %>
</div>


