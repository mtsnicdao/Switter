<div id="header">
    <h3 id="title"> Switter </h3>
    <h5 id="logout"> <%= render "devise/shared/links" %> </h5>
</div>

<div id="signdiv">
	<h2 id="signtitle"> Join Switter Now </h2> <hr/>

	<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
	  <%= devise_error_messages! %>

	  <div id="sign"><%= f.label :email %>
	  <%= f.email_field :email, autofocus: true, id:"f1" %></div>

	  <div id="sign"><%= f.label :password %>
	    <%= f.password_field :password, autocomplete: "off", id:"f1" %></div>

	  <div id="sign"><%= f.label :password_confirmation %>
	    <%= f.password_field :password_confirmation, autocomplete: "off", id:"f1"%></div>

	  <div><%= f.submit "Create My Account", :class => "button expand", id:"signinbutton" %></div>
	<% end %>

	
</div>




