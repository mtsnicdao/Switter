<div id="header">
    <h3 id="title"> Switter </h3>
</div>

<div id="signdiv">
	<h2 id="signtitle"> Sign in to Switter </h2> <hr/>
	<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	  <div id="sign">
	  <%= f.email_field :email, autofocus: true, id:"f1", placeholder:"Email Address" %></div>

	  <div id="sign">
	    <%= f.password_field :password, autocomplete: "off",id:"f1", placeholder: "Password" %></div>

	  <% if devise_mapping.rememberable? -%>
	    <div id="sign"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
	  <% end -%>

	  <div><%= f.submit "Sign in", :class => "button expand", id:"signinbutton" %></div>
	<% end %>

	<%= render "devise/shared/links" %>
</div>

